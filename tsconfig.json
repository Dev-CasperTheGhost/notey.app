{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@icons/*": ["./src/components/icons/*"],
      "@hooks/*": ["./src/hooks/*"],
      "types/*": ["./src/interfaces/*"],
      "@lib/*": ["./src/lib/*"],
      "@models/*": ["./src/models/*"],
      "@styles/*": ["./src/styles/*"],
      "@actions/*": ["./src/store/actions/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "docs", "client", "server"]
}
